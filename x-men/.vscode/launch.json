// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/ai4sd-analysers",
				"--extensionDevelopmentPath=${workspaceFolder}/ai4sd-helpers",
				"--extensionDevelopmentPath=${workspaceFolder}/easycomment"
			],
			"outFiles": [
				"${workspaceFolder}/ai4sd-analysers/out/**/*.js",
				"${workspaceFolder}/ai4sd-helpers/out/**/*.js",
				"${workspaceFolder}/easycomment/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		}
	]
}
