{
  "name": "ai4sd-analysers",
  "displayName": "AI4SD Analysers",
  "description": "Compilation of AI4SD assistants responsible for repository analysis",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],

  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "ai4sd-analysers.showActivityBarIcon": {
          "type": "boolean",
          "default": false,
          "scope": "user",
          "description": "Show the Activity Bar icon for AI4SD analysers."
        }
      }
    },
    "commands": [
      {
        "command": "ai4sd-analysers.call",
        "title": "AI4SD Analysers: Analyse repository"
      },
      {
        "command": "archy.startExecution",
        "title": "Archy: Start Execution"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "archy",
          "title": "Archy",
          "icon": "public/images/extension_icon.svg",
          "when": "config.ai4sd-analysers.showActivityBarIcon"
        }
      ]
    },
    "views": {
      "archy": [
        {
          "type": "webview",
          "id": "archy.leftSidebarPanel",
          "name": "Archy",
          "icon": "public/images/extension_icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:archy-webview": "node src/superheroes/Archy/esbuild.js",
    "watch:archy-webview": "node src/superheroes/Archy/esbuild.js --watch"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.9",
    "@types/showdown": "^2.0.6",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "typescript": "^5.7.2",
    "vscode": "^1.1.37",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "archiver": "^7.0.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.7",
    "firebase-admin": "^13.0.1",
    "form-data": "^4.0.1",
    "fs-extra": "^11.2.0",
    "markdown-it": "^14.1.0",
    "mime-types": "^2.1.35",
    "showdown": "^2.1.0",
    "simple-git": "^3.27.0"
  }
}
